@model string
@inject IEnumerable<DotNetEd.CoreAdmin.CoreAdminOptions> CoreAdminOptions
@{ 
    string assetsPath = "/_content/CoreAdmin";
    if (CoreAdminOptions.Any())
    {
        string cdnPath = CoreAdminOptions.First().CdnPath;
        if (cdnPath != null)
        {
            assetsPath = cdnPath;
        }
    }
}

@Html.TextArea("", ViewData.TemplateInfo.FormattedModelValue.ToString(), 8, 0, new { @class = "text-box multi-line form-control" })

<!-- Markdown -->
<script src="@assetsPath/js/easymde/easymde.min.js"></script>
<script>
	const easyMDE_@ViewData.ModelMetadata.Name = new EasyMDE({
		element: document.getElementById('@ViewData.ModelMetadata.Name'),
		hideIcons: ["fullscreen", "side-by-side"],
	});
</script>