@model DotNetEd.CoreAdmin.ViewModels.LoginModel
@{
    Layout = "_LoginLayout";
}

<div class="login-page">
   
    <div class="row">
        <div class="col-sm-3" style="margin-left: auto; margin-right: auto;">
            <div class="panel panel-default" style="margin-top: 50%; margin-bottom: 50%">
                <div class="panel-heading">
                    <h3 class="panel-title">Please enter your credentials</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Login">

                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                            </div>
                            <div class="form-group">
                                <input id="password_input" type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off" >
                                <input type="checkbox" onchange="document.getElementById('password_input').type = this.checked ? 'text' : 'password'" /> Show password
                            </div>
                            <div class="form-group login-remember">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe">
                                    <strong>Remember Me</strong>
                                </label>
                            </div>
                            <div class="col-lg-12 my-3">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>